<Modal
  @isVisible={{this.isModalVisible}}
  @onClose={{this.toggleModal}}
/>

<div class="container">
  <div class="posts-container">

    {{#each @posts as |post|}}
      <div {{on "click" this.toggleModal }} class="post">
        {{post.title}}
      </div>
    {{/each}}

  </div>

  <Posts::Pagination
    @totalNumberOfPages={{@totalNumberOfPages}}
  />
</div>