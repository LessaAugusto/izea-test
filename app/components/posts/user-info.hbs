{{!-- If the user data is still loading, we should show the Loading
component --}}
{{#if @userData.name}}
  <div class="user-info-container" data-test-user-info-container>
    <Icon::Profile
      @width={{"1.5rem"}}
      @height={{"1.5rem"}}
    />
    <div class="item" data-test-user-name>
      {{@userData.name}}
    </div>

    <Icon::Email
      @width={{"1.5rem"}}
      @height={{"1.5rem"}}
    />
    <div class="item" data-test-user-email>
      {{@userData.email}}
    </div>

    <Icon::Phone
      @width={{"1.5rem"}}
      @height={{"1.5rem"}}
    />
    <div class="item" data-test-user-phone>
      {{@userData.phone}}
    </div>

    <Icon::Website
      @width={{"1.5rem"}}
      @height={{"1.5rem"}}
    />
    <div class="item" data-test-user-website>
      {{@userData.website}}
    </div>

    <Icon::Address
      @width={{"1.5rem"}}
      @height={{"1.5rem"}}
    />
    <div class="item" data-test-user-address>
      {{@userData.address.street}}, {{@userData.address.suite}}
    </div>
  </div>

{{else}}
  <Loading style="width: 30px; height: 30px;" />
{{/if}}