<Modal
  @isVisible={{this.isModalVisible}}
  @onClose={{this.toggleModal}}
/>

<div class="container">
  <div class="posts-container" data-test-posts-container>
    {{#each @posts as |post index|}}
      <div {{on "click" this.toggleModal }} class="post" data-test-title-container={{index}}>
        {{post.title}}
      </div>
    {{/each}}
  </div>

  <Posts::Pagination
    @totalNumberOfPages={{@totalNumberOfPages}}
  />
</div>